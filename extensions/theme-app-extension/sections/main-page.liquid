{% schema %}
{
  "name": "Main Page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome"
    }
  ]
}
{% endschema %}

<div class="section">
  {% if section.settings.title != blank %}
    <h2 class="section__title">{{ section.settings.title }}</h2>
  {% endif %}
  <div class="section__content">
    {% for block in section.blocks %}
      {% render_block block %}
    {% endfor %}
  </div>
</div>

{% stylesheet %}
.section {
  padding: 2rem 0;
}

.section__title {
  margin-bottom: 2rem;
  text-align: center;
  font-size: 2rem;
}

.section__content {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
{% endstylesheet %} 