{% schema %}
{
  "name": "Image Block",
  "target": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Alt text",
      "default": "Image description"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Image alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 100
    }
  ]
}
{% endschema %}

<div style="text-align: {{ block.settings.alignment }}">
  <img 
    src="{{ block.settings.image | image_url }}"
    alt="{{ block.settings.alt }}"
    style="width: {{ block.settings.width }}%"
    loading="lazy"
  >
</div> 