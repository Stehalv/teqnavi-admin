{% schema %}
{
  "name": "Text Block",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text content",
      "default": "Add your text here"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}

<div style="text-align: {{ settings.text_align }}">
  {{ settings.text }}
</div> 