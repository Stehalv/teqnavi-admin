{% schema %}
{
  "name": "Heading Block",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading text",
      "default": "Add your heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}

{% case block.settings.heading_size %}
  {% when 'h1' %}
    <h1 style="text-align: {{ block.settings.text_align }}">{{ block.settings.heading }}</h1>
  {% when 'h2' %}
    <h2 style="text-align: {{ block.settings.text_align }}">{{ block.settings.heading }}</h2>
  {% when 'h3' %}
    <h3 style="text-align: {{ block.settings.text_align }}">{{ block.settings.heading }}</h3>
{% endcase %} 